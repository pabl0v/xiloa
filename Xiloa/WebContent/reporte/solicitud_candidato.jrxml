	<queryString language="SQL">
		<![CDATA[select s.fecha_registro as solicitud_fecha,
       s.experiencia as solicitud_experiencia,
       s.ocupacion as solicitud_oficio,
       s.empresa as solicitud_empresa,
      ( select extract(year from s.fecha_registro)) as solicitud_anio,
      (select extract(month from s.fecha_registro)) as solicitud_mes,
      (select extract(days from s.fecha_registro)) as solicitud_dia,
       c.certificacion_nombre as certificacion_nombre,
       c.certificacion_ifp_nombre as certificacion_ifpnombre,
       cu.nombre_completo as contacto_nombre,
       cu.numero_identificacion as contacto_nui
from sccl.solicitudes s, sccl.certificaciones c, sccl.contactos cu
where solicitud_id = $P{idsolicitud}
 and c.certificacion_id = s.certificacion_id
 and cu.contacto_id = s.contacto_id]]>
